!!!5
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge;chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:name => "viewport", :content => "width=device-width"}/
    = javascript_include_tag "application", "modernizr.min.js", "http://use.typekit.net/haf7mkg.js"
    = stylesheet_link_tag "application"

    :javascript
      try{Typekit.load();}catch(e){}
      jQuery(function($){
        $.supersized({
          fit_portrait: 0,
          slides: [{
            image: 'images/#{current_page.data.bg}'
          }]
        });
      });
  %body
    / %a{:href => "https://github.com/you"}
    /   %img{:alt => "Fork me on GitHub", :src => "https://s3.amazonaws.com/github/ribbons/forkme_right_white_ffffff.png", :style => "position: absolute; top: 0; right: 0; border: 0;"}/
    .page
      %header
        = link_to "John Rees", '/index.html', :relative => true, id: "johnrees", class: 'sprite'
        %ul
          %li= link_to "Work Log", "index.html"
          %li= link_to "About Me", "about.html"
          / %li= link_to "Calendar", "calendar.html"

      #main{:role => "main"}
        .hero
          = current_page.data.title
          %br/
          = current_page.data.title2
          %br/
          = current_page.data.title3
        = yield